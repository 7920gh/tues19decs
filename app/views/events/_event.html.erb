<div id="<%= dom_id event %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Artist:</strong>
    <%= event.artist %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= event.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price from:</strong>
    <%= event.price_low %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">to:</strong>
    <%= event.price_high %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">date:</strong>
    <%= event.event_date %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this event", event, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this event", edit_event_path(event), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
