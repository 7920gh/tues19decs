<div id="<%= dom_id product %>">
  <p>
    <strong>Title:</strong>
    <%= product.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Image url:</strong>
    <%= product.image_url %>
<%= image_tag(<img src="<%= product.image_url %>"></img>) %>




  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

</div>
